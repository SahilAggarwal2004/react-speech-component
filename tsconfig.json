{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES2022",
    "declaration": true,
    "types": [
      "node"
    ],
    "noUnusedLocals": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "rootDir": "./src",
    "outDir": "./build"
  }
}